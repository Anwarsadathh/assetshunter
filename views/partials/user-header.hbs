<style>
@font-face {
    font-family: 'Catchy Mager';
    src: url('/fonts/catchy-mager.ttf') format('truetype');
    font-weight: normal;
    font-style: normal;
}

:root {
    --primary-bg: #FAF9F6;      /* Off-white background */
    --text-color: #8B7355;      /* Rich golden brown */
    --accent-color: #D4AF37;    /* Classic gold */
    --hover-color: #996515;     /* Deep golden brown */
    --white: #FFFFFF;           /* Pure white */
    --gold-light: #FFD700;      /* Bright gold */
    --gold-dark: #DAA520;       /* Golden rod */
    --cream: #FFEFD5;          /* Papaya whip */
    --sand: #F4D03F;           /* Soft gold */
    --champagne: #FEE5AC;      /* Light champagne */
}
.site-header {
    padding-top: 64px;
}

.navbar {
    background-color: var(--text-color) !important;
    padding: 0.75rem 0;
    transition: all 0.3s ease;
    border-bottom: 1px solid rgba(129, 109, 93, 0.1);
}

.navbar-brand {
    font-family: 'Catchy Mager', cursive;
    font-size: 1.6rem;
    color: var(--white) !important;
    margin-right: 2.5rem;
    letter-spacing: 0.5px;
}
.navbar-brand img{
     height:40px !important;
}
.navbar.scrolled {
    padding: 0.5rem 0;
    backdrop-filter: blur(10px);
    box-shadow: 0 2px 10px rgba(129, 109, 93, 0.05);
}

.navbar-nav .nav-link {
    font-size: 0.75rem;
    padding: 0.4rem 1.25rem !important;
    color: var(--white) !important;
    position: relative;
    letter-spacing: 2px;
    font-weight: 400;
    text-decoration: none;
}

.navbar-nav .nav-link:after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 0;
    height: 2px;
    background-color: var(--white);
    transition: width 0.3s ease;
}

.navbar-nav .nav-link:hover:after,
.navbar-nav .nav-item.active .nav-link:after {
    width: 40%;
}

.navbar-toggler {
    border: none;
    padding: 0;
}

.navbar-toggler:focus {
    box-shadow: none;
}

.navbar-toggler-icon {
    background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' width='30' height='30' viewBox='0 0 30 30'%3e%3cpath stroke='rgba(255, 255, 255, 1)' stroke-linecap='round' stroke-miterlimit='10' stroke-width='2' d='M4 7h22M4 15h22M4 23h22'/%3e%3c/svg%3e");
}

@media (max-width: 991.98px) {
    .navbar-collapse {
        background-color: var(--primary-bg);
        padding: 1rem;
        margin-top: 1rem;
        border-radius: 4px;
    }
 .enquire-btn {
        margin: 1rem 0;
        display: block;
        text-align: center;
    }
    .navbar-nav {
        padding: 1rem 0;
        text-align: center;
    }
    
    .navbar-nav .nav-link {
        padding: 0.6rem 0.8rem !important;
        color: var(--text-color) !important;
        position: relative;
    }
    
    .navbar-nav .nav-link:after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 50%;
        transform: translateX(-50%);
        width: 0;
        height: 2px;
        background-color: var(--text-color);
        transition: width 0.3s ease;
    }

    .navbar-nav .nav-link:hover:after,
    .navbar-nav .nav-item.active .nav-link:after {
        width: 40%;
    }
}
/* Enquire button */
.enquire-btn {
    padding: 0.4rem 1.25rem;
    font-size: 0.75rem;
    letter-spacing: 2px;
    border: 1px solid var(--text-color) !important;
    border-radius: 4px;
    margin-left: 1rem;
    transition: all 0.3s ease;
      background-color: var(--white) !important;
       color: var(--text-color);
}

.enquire-btn:hover {
    background-color: var(--text-color) !important;
    color: var(--white) !important;
}
/* Additional utility classes */
.text-muted {
    color: var(--accent-color) !important;
}

.bg-light {
    background-color: var(--primary-bg) !important;
}
</style>
<script>
// Navbar scroll effect
window.addEventListener('scroll', function() {
    const navbar = document.querySelector('.navbar');
    if (window.scrollY > 50) {
        navbar.classList.add('scrolled');
    } else {
        navbar.classList.remove('scrolled');
    }
});

// Add active class to current nav item
document.addEventListener('DOMContentLoaded', function() {
    const currentLocation = window.location.pathname;
    document.querySelectorAll('.navbar-nav .nav-link').forEach(link => {
        if (link.getAttribute('href') === currentLocation) {
            link.closest('.nav-item').classList.add('active');
        }
    });
});
</script>