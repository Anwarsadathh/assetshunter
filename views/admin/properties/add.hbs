<script>
    function initializePropertyForm() {
        // Initialize Select2
        if ($.fn.select2) {
            $('.select2').select2({
                theme: "classic",
                placeholder: "Select options",
                allowClear: true,
                width: '100%'
            });
        }
// Add to your existing script
function initializeBrochurePreview() {
    $('input[name="brochure"]').on('change', function() {
        const file = this.files[0];
        const container = $('#brochurePreviewContainer');
        container.empty();

        if (file) {
            if (file.type !== 'application/pdf') {
                Swal.fire({
                    icon: 'error',
                    title: 'Invalid file type',
                    text: 'Please upload a PDF file'
                });
                this.value = '';
                return;
            }

            if (file.size > 10 * 1024 * 1024) {
                Swal.fire({
                    icon: 'error',
                    title: 'File too large',
                    text: 'Brochure size should not exceed 10MB'
                });
                this.value = '';
                return;
            }

            container.html(`
                <div class="alert alert-info d-flex align-items-center">
                    <i class="fas fa-file-pdf me-2"></i>
                    <span>${file.name}</span>
                    <button type="button" class="btn-close ms-auto" 
                            onclick="removeBrochure()" aria-label="Remove">
                    </button>
                </div>
            `);
        }
    });
}

function removeBrochure() {
    $('input[name="brochure"]').val('');
    $('#brochurePreviewContainer').empty();
}

