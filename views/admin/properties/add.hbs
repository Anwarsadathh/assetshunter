        // Auto calculate price per sqft
        $('input[name="price"], input[name="totalArea"]').on('input', function() {
            const price = $('input[name="price"]').val();
            const area = $('input[name="totalArea"]').val();
            if (price && area) {
                const pricePerSqFt = (price * 100000 / area).toFixed(2);
                $('input[name="pricePerSqFt"]').val(pricePerSqFt);
            }
        });

        // Ensure available units don't exceed total units
        $('input[name="availableUnits"]').on('input', function() {
            const totalUnits = parseInt($('input[name="totalUnits"]').val());
            const availableUnits = parseInt($(this).val());
            if (availableUnits > totalUnits) {
                $(this).val(totalUnits);
                Swal.fire({
                    icon: 'warning',
                    title: 'Invalid Input',
                    text: 'Available units cannot exceed total units'
                });
            }
        });
    }

    // Function to remove image preview
    function removePreview(button) {
        $(button).closest('.preview-image-container').remove();
        
        // Clear file input if no previews remain
        if ($('.preview-image-container').length === 0) {
            $('input[name="images"]').val('');
        }
    }

    // Initialize when document is ready
    document.addEventListener('DOMContentLoaded', function() {
        if (typeof jQuery !== 'undefined' && jQuery.fn.select2) {
            initializePropertyForm();
        } else {
            console.error('Required libraries are not loaded');
            Swal.fire({
                icon: 'error',
                title: 'Error',
                text: 'Required libraries failed to load. Please refresh the page.'
            });
        }
    });
