{{!-- views/user/property-details.hbs --}}

<!-- Property Header -->
<div class="property-header">
    <div class="container">
        <nav aria-label="breadcrumb" data-aos="fade-down">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li class="breadcrumb-item"><a href="/properties">Properties</a></li>
                <li class="breadcrumb-item active">{{property.projectName}}</li>
            </ol>
        </nav>
        <div class="property-title" data-aos="fade-up">
            <h1>{{property.projectName}}</h1>
            <p><i class="fas fa-map-marker-alt"></i> {{property.location}}</p>
        </div>
    </div>
</div>

<!-- Property Gallery -->
<section class="property-gallery">
    <div class="container">
        <div class="gallery-grid" data-aos="fade-up">
            {{#each property.images}}
            <div class="gallery-item">
                <a href="{{this}}" class="glightbox" data-gallery="property-gallery">
                    <img src="{{this}}" alt="Property Image {{@index}}" class="img-fluid">
                </a>
            </div>
            {{/each}}
        </div>
    </div>
</section>

<!-- Property Overview -->
<section class="property-overview">
    <div class="container">
        <div class="row">
            <!-- Main Content -->
            <div class="col-lg-8">
                <!-- Price & Status -->
                <div class="overview-card" data-aos="fade-up">
                    <div class="price-status">
                        <div class="price">
                            <h2>₹{{property.price}} Lakhs</h2>
                            <span>₹{{property.pricePerSqFt}}/sq.ft</span>
                        </div>
                        <div class="status">
                            <span class="badge {{property.status}}">{{property.status}}</span>
                            <span class="property-type">{{property.propertyType}}</span>
                        </div>
                    </div>
                </div>

                <!-- Key Features -->
                <div class="overview-card" data-aos="fade-up">
                    <h3>Key Features</h3>
                    <div class="features-grid">
                        <div class="feature-item">
                            <i class="fas fa-vector-square"></i>
                            <h4>Super Area</h4>
                            <p>{{property.totalArea}} sq.ft</p>
                        </div>
                        <div class="feature-item">
                            <i class="fas fa-ruler-combined"></i>
                            <h4>Carpet Area</h4>
                            <p>{{property.carpetArea}} sq.ft</p>
                        </div>
                        <div class="feature-item">
                            <i class="fas fa-bed"></i>
                            <h4>Bedrooms</h4>
                            <p>{{property.bedrooms}}</p>
                        </div>
                        <div class="feature-item">
                            <i class="fas fa-bath"></i>
                            <h4>Bathrooms</h4>
                            <p>{{property.bathrooms}}</p>
                        </div>
                        <div class="feature-item">
                            <i class="fas fa-car"></i>
                            <h4>Parking</h4>
                            <p>{{property.parkingSpots}} Spots</p>
                        </div>
                        <div class="feature-item">
                            <i class="fas fa-building"></i>
                            <h4>Total Floors</h4>
                            <p>{{property.totalFloors}}</p>
                        </div>
                    </div>
                </div>

                <!-- Description -->
                <div class="overview-card" data-aos="fade-up">
                    <h3>Description</h3>
                    <div class="description">
                        {{property.description}}
                    </div>
                </div>

                <!-- Amenities -->
                <div class="overview-card" data-aos="fade-up">
                    <h3>Amenities</h3>
                    <div class="amenities-grid">
                        {{#each property.amenities}}
                        <div class="amenity-item">
                            <i class="{{this.icon}}"></i>
                            <span>{{this}}</span>
                        </div>
                        {{/each}}
                    </div>
                </div>
<!-- Floor Plans -->
<div class="overview-card" data-aos="fade-up">
    <h3>Floor Plans</h3>
    {{#if property.floorPlanImages}}
    <div class="floor-plans-slider swiper">
        <div class="swiper-wrapper">
            {{#each property.floorPlanImages}}
            <div class="swiper-slide">
                <div class="floor-plan-item">
                    <img src="{{this}}" alt="Floor Plan {{add @index 1}}" class="img-fluid rounded shadow-sm">
                    <h4 class="mt-3 text-center">Floor Plan {{add @index 1}}</h4>
                </div>
            </div>
            {{/each}}
        </div>
        <div class="swiper-pagination"></div>
        <div class="swiper-button-next"></div>
        <div class="swiper-button-prev"></div>
    </div>
    {{else}}
    <div class="text-center py-4">
        <p class="text-muted">No floor plans available</p>
    </div>
    {{/if}}
</div>

                
            </div>

            <!-- Sidebar -->
            <div class="col-lg-4">
                <!-- Contact Form -->
                <div class="contact-card sticky-top" data-aos="fade-left">
                    <h3>Interested in this property?</h3>
                    <form id="propertyEnquiryForm" class="enquiry-form">
                        <input type="hidden" name="propertyId" value="{{property._id}}">
                        <input type="hidden" name="propertyName" value="{{property.projectName}}">
                        
                        <div class="mb-3">
                            <input type="text" class="form-control" name="name" placeholder="Your Name" required>
                        </div>
                        <div class="mb-3">
                            <input type="email" class="form-control" name="email" placeholder="Email Address" required>
                        </div>
                        <div class="mb-3">
                            <input type="tel" class="form-control" name="phone" placeholder="Phone Number" required>
                        </div>
                        <div class="mb-3">
                            <textarea class="form-control" name="message" rows="4" 
                                placeholder="I'm interested in this property. Please contact me." required></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">
                            Send Message
                        </button>
                    </form>
                    
                    <!-- OR Separator -->
                    <div class="separator">
                        <span>OR</span>
                    </div>
                    
                    <!-- Direct Contact -->
                    <div class="direct-contact">
                        <a href="tel:+919876543210" class="btn btn-outline-primary w-100 mb-3">
                            <i class="fas fa-phone-alt me-2"></i> Call Now
                        </a>
                        <a href="https://wa.me/919876543210" target="_blank" class="btn btn-success w-100">
                            <i class="fab fa-whatsapp me-2"></i> WhatsApp
                        </a>
                    </div>
                </div>

                <!-- Download Brochure -->
                <div class="download-card" data-aos="fade-up">
                    <h3>Download Brochure</h3>
                    <p>Get detailed information about this property</p>
                    <a href="{{property.brochureUrl}}" class="btn btn-outline-primary w-100" download>
                        <i class="fas fa-download me-2"></i> Download PDF
                    </a>
                </div>

                <!-- Share Property -->
                <div class="share-card" data-aos="fade-up">
                    <h3>Share Property</h3>
                    <div class="social-share">
                        <a href="#" onclick="shareOnFacebook()" class="btn btn-facebook">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                        <a href="#" onclick="shareOnTwitter()" class="btn btn-twitter">
                            <i class="fab fa-twitter"></i>
                        </a>
                        <a href="#" onclick="shareOnWhatsApp()" class="btn btn-whatsapp">
                            <i class="fab fa-whatsapp"></i>
                        </a>
                        <a href="#" onclick="shareOnLinkedIn()" class="btn btn-linkedin">
                            <i class="fab fa-linkedin-in"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Similar Properties -->
<section class="similar-properties">
    <div class="container">
        <h2 class="section-title" data-aos="fade-up">Similar Properties</h2>
        <div class="swiper" data-aos="fade-up">
            <div class="swiper-wrapper">
                {{#each similarProperties}}
                <div class="swiper-slide">
                    <div class="property-card">
                        <div class="property-image">
                            <img src="{{images.[0]}}" alt="{{projectName}}">
                            <div class="property-badges">
                                <span class="badge-type">{{propertyType}}</span>
                                <span class="badge-status">{{status}}</span>
                            </div>
                        </div>
                        <div class="property-content">
                            <h4>{{projectName}}</h4>
                            <p class="location"><i class="fas fa-map-marker-alt"></i> {{location}}</p>
                            <div class="property-specs">
                                <span><i class="fas fa-bed"></i> {{bedrooms}} Beds</span>
                                <span><i class="fas fa-bath"></i> {{bathrooms}} Baths</span>
                                <span><i class="fas fa-vector-square"></i> {{carpetArea}} sq.ft</span>
                            </div>
                            <div class="property-price">
                                <h5>₹{{price}} Lakhs</h5>
                                <a href="/properties/{{_id}}" class="btn btn-primary btn-sm">View Details</a>
                            </div>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
            <div class="swiper-pagination"></div>
            <div class="swiper-button-next"></div>
            <div class="swiper-button-prev"></div>
        </div>
    </div>
</section>
