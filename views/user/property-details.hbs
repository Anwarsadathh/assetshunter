<script>
// Initialize Google Maps
function initMap() {
    const map = new google.maps.Map(document.getElementById('propertyMap'), {
        zoom: 15,
        center: {
            lat: {{property.location.latitude}},
            lng: {{property.location.longitude}}
        },
        styles: [
            {
                "featureType": "poi",
                "elementType": "labels",
                "stylers": [{ "visibility": "off" }]
            }
        ]
    });

    // Add marker for property location
    const marker = new google.maps.Marker({
        position: {
            lat: {{property.location.latitude}},
            lng: {{property.location.longitude}}
        },
        map: map,
        title: '{{property.projectName}}',
        animation: google.maps.Animation.DROP,
        icon: {
            url: '/images/marker.png',
            scaledSize: new google.maps.Size(40, 40)
        }
    });

    // Add info window
    const infoWindow = new google.maps.InfoWindow({
        content: `
            <div class="map-info-window">
                <h5>{{property.projectName}}</h5>
                <p>{{property.location}}</p>
            </div>
        `
    });

    marker.addListener('click', () => {
        infoWindow.open(map, marker);
    });

    // Add nearby places markers if available
    {{#if property.nearbyPlaces}}
        {{#each property.nearbyPlaces}}
            new google.maps.Marker({
                position: {
                    lat: {{this.latitude}},
                    lng: {{this.longitude}}
                },
                map: map,
                title: '{{this.name}}',
                icon: {
                    url: '/images/markers/{{this.type}}.png',
                    scaledSize: new google.maps.Size(32, 32)
                }
            });
        {{/each}}
    {{/if}}
}

// Function to handle image gallery
function initGallery() {
    const galleryItems = document.querySelectorAll('.gallery-item');
    
    galleryItems.forEach(item => {
        item.addEventListener('click', e => {
            if (!item.querySelector('.glightbox')) {
                e.preventDefault();
                const img = item.querySelector('img');
                const lightbox = GLightbox({
                    elements: [{
                        'href': img.src,
                        'type': 'image'
                    }]
                });
                lightbox.open();
            }
        });
    });
}

// Function to handle floor plan zoom
function initFloorPlanZoom() {
    const floorPlans = document.querySelectorAll('.floor-plan-item img');
    
    floorPlans.forEach(plan => {
        plan.addEventListener('click', () => {
            const lightbox = GLightbox({
                elements: [{
                    'href': plan.src,
                    'type': 'image'
                }]
            });
            lightbox.open();
        });
    });
}

// Function to handle sticky sidebar
function initStickySidebar() {
    if (window.innerWidth >= 992) {
        const sidebar = document.querySelector('.contact-card');
        const stickyTop = sidebar.offsetTop;
        const stickyBottom = document.querySelector('.similar-properties').offsetTop;

        window.addEventListener('scroll', () => {
            if (window.pageYOffset >= stickyTop && window.pageYOffset <= stickyBottom - sidebar.offsetHeight - 100) {
                sidebar.style.position = 'fixed';
                sidebar.style.top = '20px';
                sidebar.style.width = sidebar.parentElement.offsetWidth + 'px';
            } else if (window.pageYOffset > stickyBottom - sidebar.offsetHeight - 100) {
                sidebar.style.position = 'absolute';
                sidebar.style.top = (stickyBottom - sidebar.offsetHeight - 100) + 'px';
            } else {
                sidebar.style.position = 'static';
                sidebar.style.top = 'auto';
            }
        });
    }
}

// Function to validate phone number
function validatePhone(phone) {
    const phoneRegex = /^[0-9]{10}$/;
    return phoneRegex.test(phone);
}

// Function to validate email
function validateEmail(email) {
    const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
    return emailRegex.test(email);
}

// Initialize everything when DOM is ready
document.addEventListener('DOMContentLoaded', function() {
    initGallery();
    initFloorPlanZoom();
    initStickySidebar();
    
    // Initialize AOS animations
    AOS.init({
        duration: 800,
        once: true
    });

    // Load Google Maps
    const script = document.createElement('script');
    script.src = `https://maps.googleapis.com/maps/api/js?key={{googleMapsApiKey}}&callback=initMap`;
    script.async = true;
    document.head.appendChild(script);
});

// Add form validation
const enquiryForm = document.getElementById('propertyEnquiryForm');
if (enquiryForm) {
    enquiryForm.addEventListener('submit', function(e) {
        const phone = this.querySelector('input[name="phone"]').value;
        const email = this.querySelector('input[name="email"]').value;

        if (!validatePhone(phone)) {
            e.preventDefault();
            alertify.error('Please enter a valid 10-digit phone number');
            return false;
        }

        if (!validateEmail(email)) {
            e.preventDefault();
            alertify.error('Please enter a valid email address');
            return false;
        }
    });
}
</script>