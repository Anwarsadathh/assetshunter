<div class="enquiry-form-container py-5 mt-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-lg border-0 rounded-4">
                    <div class="card-header text-center py-4 bg-gradient">
                        <h3 class="mb-1 text-dark fw-bold">Enquire Now</h3>
                        <p class="text-white-75 text-dark mb-0">We'll get back to you shortly</p>
                    </div>

                    <div class="card-body p-4">
                        {{#if success}}
                        <div class="alert alert-success" role="alert">
                            <i class="fas fa-check-circle me-2"></i> {{success}}
                        </div>
                        {{/if}}

                        {{#if error}}
                        <div class="alert alert-danger" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i> {{error}}
                        </div>
                        {{/if}}

                        <form id="enquiryForm" action="/submit-form" method="POST" class="needs-validation" novalidate>
                            {{#if propertyId}}
                            <input type="hidden" name="propertyId" value="{{propertyId}}">
                            <input type="hidden" name="propertyName" value="{{propertyName}}">
                            {{/if}}

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="input-group mb-4">
                                        <input type="text" class="form-control" id="name" name="name" placeholder="Your Name" required>
                                        <span class="input-icon"><i class="fas fa-user"></i></span>
                                        <div class="invalid-feedback">Please enter your name</div>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="input-group mb-4">
                                        <input type="email" class="form-control" id="email" name="email" placeholder="Email Address" required>
                                        <span class="input-icon"><i class="fas fa-envelope"></i></span>
                                        <div class="invalid-feedback">Please enter a valid email address</div>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="input-group mb-4">
                                        <input type="tel" class="form-control" id="mobile" name="mobile" placeholder="Mobile Number" 
                                               pattern="[0-9]{10}" required>
                                        <span class="input-icon"><i class="fas fa-phone"></i></span>
                                        <div class="invalid-feedback">Please enter a valid 10-digit mobile number</div>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="input-group mb-4">
                                        <select class="form-select" id="propertyType" name="propertyType" required>
                                            <option value="">Select Property Type</option>
                                            <option value="1BHK">1 BHK</option>
                                            <option value="2BHK">2 BHK</option>
                                            <option value="3BHK">3 BHK</option>
                                            <option value="4BHK">4 BHK</option>
                                            <option value="Villa">Villa</option>
                                            <option value="Plot">Plot</option>
                                        </select>
                                        <span class="input-icon"><i class="fas fa-home"></i></span>
                                        <div class="invalid-feedback">Please select a property type</div>
                                    </div>
                                </div>

                                <div class="col-12">
                                    <div class="input-group mb-4">
                                        <textarea class="form-control" id="message" name="message" placeholder="Your Message" rows="4" required></textarea>
                                        <span class="input-icon"><i class="fas fa-comment-alt"></i></span>
                                        <div class="invalid-feedback">Please enter your message</div>
                                    </div>
                                </div>

                                <div class="col-12">
                                    <button type="submit" class="btn btn-gradient w-100">Send Enquiry</button>
                                </div>
                            </div>
                        </form>
                    </div>

                    <div class="card-footer text-center">
                        <small>Prefer to reach us directly?</small>
                        <div class="d-flex justify-content-center gap-3 mt-3">
                            <a href="tel:+916362361137" class="btn btn-outline-primary">
                                <i class="fas fa-phone-alt me-2"></i> Call Now
                            </a>
                            <a href="https://wa.me/916362361137" target="_blank" class="btn btn-outline-success">
                                <i class="fab fa-whatsapp me-2"></i> WhatsApp
                            </a>

                            <a href="mailto:assetshunterofficial@gmail.com" class="btn btn-outline-info">
                                <i class="fas fa-envelope me-2"></i> Email
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
.enquiry-form-container {
    background-color: #f3f4f6;
    min-height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 20px 0;
}

.card {
    border-radius: 12px;
    border: none;
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.08);
    overflow: hidden;
}

.card-header {
    background: linear-gradient(135deg, #6c63ff, #ab47bc);
    color: #fff;
    text-align: center;
    padding: 20px 15px;
}

.card-header h3 {
    font-size: 1.25rem;
    font-weight: bold;
}

.card-header p {
    font-size: 0.75rem;
    color: rgba(255, 255, 255, 0.8);
}

.card-body {
    padding: 30px 20px;
    background-color: #fff;
}

.card-footer {
    background-color: #f8f9fa;
    text-align: center;
    padding: 15px;
}

.card-footer small {
    font-size: 0.75rem;
}

.input-group {
    position: relative;
    margin-bottom: 1rem;
}

.input-icon {
    position: absolute;
    top: 10px;
    left: 10px;
    color: #6c63ff;
    font-size: 0.9rem;
}

.form-control, 
.form-select, 
textarea {
    padding-left: 35px;
    padding-right: 10px;
    height: 38px;
    border-radius: 6px;
    border: 1px solid #dcdcdc;
    font-size: 0.85rem;
    transition: all 0.3s;
}

.form-control:focus, 
.form-select:focus, 
textarea:focus {
    border-color: #6c63ff;
    box-shadow: 0 0 0 2px rgba(108, 99, 255, 0.1);
}

textarea {
    height: 80px;
}

.form-control::placeholder, 
textarea::placeholder {
    color: #aaa;
    font-size: 0.75rem;
}

.btn {
    display: inline-block;
    width: 100%;
    padding: 10px 15px;
    font-size: 0.85rem;
    text-align: center;
    border: none;
    border-radius: 6px;
    transition: all 0.3s;
    cursor: pointer;
}

.btn-gradient {
    background: linear-gradient(135deg, #6c63ff, #ab47bc);
    color: #fff;
    border-radius: 8px;
    transition: 0.3s;
}

.btn-gradient:hover {
    background: linear-gradient(135deg, #ab47bc, #6c63ff);
    transform: translateY(-2px);
}

.btn-outline-primary, 
.btn-outline-success, 
.btn-outline-info {
    border-radius: 6px;
    border: 1px solid #dcdcdc;
    font-size: 0.85rem;
    transition: 0.3s;
}

.btn-outline-primary:hover, 
.btn-outline-success:hover, 
.btn-outline-info:hover {
    background-color: #f3f4f6;
    transform: translateY(-2px);
}

.btn:active {
    transform: scale(0.95);
}

button:disabled {
    opacity: 0.6;
    cursor: not-allowed;
}

.alert {
    border-radius: 8px;
    padding: 10px;
    font-size: 0.75rem;
    display: flex;
    align-items: center;
}

.alert-success {
    background-color: rgba(45, 206, 137, 0.1);
    color: #2dce89;
}

.alert-danger {
    background-color: rgba(235, 69, 95, 0.1);
    color: #eb455f;
}

.alert i {
    margin-right: 8px;
    font-size: 1rem;
}

.invalid-feedback {
    font-size: 0.75rem;
    color: #eb455f;
    margin-top: 4px;
}

.input-group .invalid-feedback {
    position: absolute;
    bottom: -15px;
}

.form-control:invalid {
    border-color: #eb455f;
}

input:invalid {
    border-color: #eb455f;
}

button:disabled {
    opacity: 0.6;
    cursor: not-allowed;
}

/* Responsive Design */
@media (max-width: 768px) {
    .col-md-6 {
        flex: 0 0 100%;
        max-width: 100%;
    }

    .btn-outline-primary, 
    .btn-outline-success, 
    .btn-outline-info {
        width: 100%;
    }

    .input-group {
        margin-bottom: 0.75rem;
    }

    .card-header {
        padding: 15px;
    }

    .card-body {
        padding: 20px 15px;
    }

    .btn {
        padding: 8px 10px;
        font-size: 0.8rem;
    }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('enquiryForm');
    
    // Form validation
    form.addEventListener('submit', function(event) {
        if (!form.checkValidity()) {
            event.preventDefault();
            event.stopPropagation();
        } else {
            // Show loading state
            const submitBtn = form.querySelector('button[type="submit"]');
            submitBtn.disabled = true;
            submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Sending...';
        }
        form.classList.add('was-validated');
    });

    // Mobile number validation
    const mobileInput = document.getElementById('mobile');
    mobileInput.addEventListener('input', function(e) {
        this.value = this.value.replace(/[^0-9]/g, '').slice(0, 10);
    });

    // Initialize floating labels
    const inputs = document.querySelectorAll('.form-control, .form-select');
    inputs.forEach(input => {
        input.addEventListener('focus', function() {
            this.parentElement.classList.add('focused');
        });
        input.addEventListener('blur', function() {
            if (!this.value) {
                this.parentElement.classList.remove('focused');
            }
        });
    });
});

// AJAX form submission
$('#enquiryForm').on('submit', function(e) {
    e.preventDefault();

    if (!this.checkValidity()) {
        return;
    }

    const form = $(this);
    const submitBtn = form.find('button[type="submit"]');
    
    $.ajax({
        url: form.attr('action'),
        method: 'POST',
        data: form.serialize(),
        beforeSend: function() {
            submitBtn.prop('disabled', true).html('<span class="spinner-border spinner-border-sm me-2"></span>Sending...');
        },
        success: function(response) {
            if (response.success) {
                Swal.fire({
                    icon: 'success',
                    title: 'Thank You!',
                    text: 'Your enquiry has been submitted successfully. We will contact you shortly.',
                    confirmButtonColor: '#2B3467'
                }).then(() => {
                    form[0].reset();
                    form.removeClass('was-validated');
                });
            } else {
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: response.message || 'Something went wrong! Please try again.',
                    confirmButtonColor: '#2B3467'
                });
            }
        },
        error: function() {
            Swal.fire({
                icon: 'error',
                title: 'Oops...',
                text: 'Something went wrong! Please try again.',
                confirmButtonColor: '#2B3467'
            });
        },
        complete: function() {
            submitBtn.prop('disabled', false).html('<i class="fas fa-paper-plane me-2"></i> Send Enquiry');
        }
    });
});
</script>