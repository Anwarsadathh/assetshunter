  }

  .overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.6);
  }

  .blog-banner-title {
    color: #fff;
    font-size: 36px;
    font-weight: bold;
    position: relative;
    text-align: center;
  }

  /* Blog Content Layout */
  .blog-detail-container {
    display: flex;
    margin: 50px auto;
    width: 80%;
    max-width: 1200px;
  }

  .main-content {
    flex: 2;
    margin-right: 20px;
    font-size: 18px;
    line-height: 1.8;
  }

  .sidebar {
    flex: 1;
    background: #f9f9f9;
