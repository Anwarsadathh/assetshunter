<!-- Blog Banner Section -->
<div class="blog-banner" style="background-image: url('{{blog.imagePath}}');">
  <div class="overlay"></div>
  <h1 class="blog-banner-title">{{blog.title}}</h1>
</div>

<!-- Blog Content Container -->
<div class="blog-detail-container">
  <!-- Main Content -->
  <div class="main-content">
    <h2>{{blog.title}}</h2>
    <p>{{blog.description}}</p>
    <p><strong>Published on:</strong> {{formatDate blog.createdAt}}</p>
  </div>

  <!-- Sidebar -->
  <aside class="sidebar">
    <!-- Search Widget -->
    <div class="search-widget">
      <h3>Search</h3>
      <input type="text" placeholder="Search here..." />
      <button>Search</button>
    </div>
<!-- Recent Posts -->
<div class="recent-posts mt-3">
  <h3>Recent Posts</h3>
  <ul>
    {{#each recentPosts}}
      <li style="display: flex; align-items: center; margin-bottom: 15px;">
        <img src="{{this.imagePath}}" alt="{{this.title}}" style="width: 60px; height: 60px; object-fit: cover; margin-right: 10px; border-radius: 4px;" />
        <a href="/blog/{{this._id}}" style="text-decoration: none; color: #333; font-size: 16px; transition: color 0.3s;">
          {{this.title}}
        </a>
      </li>
    {{/each}}
  </ul>
</div>

  </aside>
</div>

<!-- Social Sharing Section -->
<div class="social-sharing">
  <p>Share this post:</p>
  <div class="social-icons">
    <a href="#" class="social-icon"><i class="fab fa-facebook-f"></i></a>
    <a href="#" class="social-icon"><i class="fab fa-twitter"></i></a>
    <a href="#" class="social-icon"><i class="fab fa-whatsapp"></i></a>
    <a href="#" class="social-icon"><i class="fab fa-linkedin-in"></i></a>
  </div>
</div>

