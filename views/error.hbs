{{!-- views/error.hbs --}}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Error - {{error.status}}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .error-container {
            text-align: center;
            padding: 2rem;
        }
        .error-code {
            font-size: 6rem;
            font-weight: 700;
            color: #5e72e4;
            margin-bottom: 1rem;
        }
        .error-message {
            font-size: 1.5rem;
            color: #8898aa;
            margin-bottom: 2rem;
        }
        .back-button {
            padding: 0.75rem 2rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.05em;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="error-container">
            <div class="error-code">{{error.status}}</div>
            <div class="error-message">{{message}}</div>
            <a href="/" class="btn btn-primary back-button">
                Back to Home
            </a>
            {{#if error.stack}}
                {{#if (eq NODE_ENV "development")}}
                    <div class="mt-4">
                        <pre class="text-start bg-light p-3 rounded">{{error.stack}}</pre>
                    </div>
                {{/if}}
            {{/if}}
        </div>
    </div>
</body>
</html>