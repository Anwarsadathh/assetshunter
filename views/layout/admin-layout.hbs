<!-- Custom Scripts -->
<script>
// Wait for document ready
$(document).ready(function() {
    // Initialize DataTable only if not already initialized
    initializeDataTable();

    // Menu Toggle
    $('.menu-toggle').click(function() {
        $('.sidebar').toggleClass('active');
        $('.mobile-overlay').toggleClass('active');
        $('.main-content').toggleClass('expanded');
    });

    // Initialize tooltips
    initializeTooltips();

    // Initialize other components
    initializeComponents();
});

// Function to initialize DataTable
function initializeDataTable() {
    // Destroy existing DataTable if it exists
    if ($.fn.DataTable.isDataTable('.datatable')) {
        $('.datatable').DataTable().destroy();
    }

    // Initialize DataTable with all options
    const table = $('.datatable').DataTable({
        responsive: true,
        order: [[3, 'desc']], // Sort by date column
        pageLength: 25,
        language: {
            search: "",
            searchPlaceholder: "Search enquiries...",
            paginate: {
                previous: "<i class='fas fa-angle-left'>",
                next: "<i class='fas fa-angle-right'>"
            }
        },
        dom: 'Bfrtip',
        buttons: [
            {
                extend: 'excel',
                text: '<i class="fas fa-file-excel me-1"></i> Export Excel',
                className: 'btn btn-sm btn-success',
                title: 'Enquiries_' + moment().format('YYYY-MM-DD'),
                exportOptions: {
                    columns: [0, 1, 2, 3, 4]
                }
            },
            {
                extend: 'pdf',
                text: '<i class="fas fa-file-pdf me-1"></i> Export PDF',
                className: 'btn btn-sm btn-danger',
                title: 'Enquiries_' + moment().format('YYYY-MM-DD'),
                exportOptions: {
                    columns: [0, 1, 2, 3, 4]
                }
            }
        ]
    });

    // Filter functionality
    $('.btn-group .btn').off('click').on('click', function() {
        $('.btn-group .btn').removeClass('active');
        $(this).addClass('active');
        
        const filter = $(this).data('filter');
        if (filter === 'all') {
            table.column(4).search('').draw();
        } else {
            table.column(4).search(filter).draw();
        }
    });

    return table;
}

// Function to initialize tooltips
function initializeTooltips() {
    const tooltipList = document.querySelectorAll('[data-bs-toggle="tooltip"]');
    tooltipList.forEach(tooltipTriggerEl => {
        new bootstrap.Tooltip(tooltipTriggerEl);
    });
}

// Function to initialize other components
function initializeComponents() {
    // Initialize clipboard
    if (typeof ClipboardJS !== 'undefined') {
        new ClipboardJS('.copy-btn');
    }

    // Handle form validations
    $('form').not('#logoutForm').each(function() {
        $(this).on('submit', function(e) {
            if (!this.checkValidity()) {
                e.preventDefault();
                e.stopPropagation();
            }
            $(this).addClass('was-validated');
        });
    });

    // Notification function
    window.showNotification = function(type, message) {
        if (typeof Swal !== 'undefined') {
            Swal.fire({
                icon: type,
                text: message,
                toast: true,
                position: 'top-end',
                showConfirmButton: false,
                timer: 3000,
                timerProgressBar: true,
                didOpen: (toast) => {
                    toast.addEventListener('mouseenter', Swal.stopTimer)
                    toast.addEventListener('mouseleave', Swal.resumeTimer)
                }
            });
        } else {
            alert(message);
        }
    };

    // Initialize flash messages
    {{#if success}}
        showNotification('success', '{{success}}');
    {{/if}}

    {{#if error}}
        showNotification('error', '{{error}}');
    {{/if}}
}

// All your other functions remain the same...
</script>

<!-- Any additional page-specific scripts -->
{{{_sections.scripts}}}
    
</body>
</html>