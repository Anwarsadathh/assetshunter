                    } else {
                        backToTop.classList.remove('active');
                    }
                });

                backToTop.addEventListener('click', (e) => {
                    e.preventDefault();
                    window.scrollTo({
                        top: 0,
                        behavior: 'smooth'
                    });
                });
            }

            // Remove preloader
            const preloader = document.querySelector('#preloader');
            if (preloader) {
                window.addEventListener('load', () => {
